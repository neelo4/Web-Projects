};

const PolicyStatusNotification: React.FC<Props & BrandDataProps> = ({ t, tt, tExists, policy }) => {
  const [showNumber, setShowNumber] = useState(false);
  
  const renderSubtext = () => {
    const baseText = t(getFullBrandStringNameByUserType('labels.missedInstalmentSubtext'));
    
    if (showNumber) {
      return baseText.replace(
        tt('constants.phoneNumbers.maskGeneralEnquiries'), 
        tt('constants.phoneNumbers.generalEnquiries')
      );
    }
    
    return (
      <>
        {baseText}{' '}
        <Link onClick={() => setShowNumber(true)}>
          {tt('pages.contactUs.callUs.showNumberText')}
        </Link>
      </>
    );
  };

  if (showMissedInstalment) {
    return (
      <PolicyNotification
        type="warning"
        label={tt('labels.missedInstalment')}
        subtext={renderSubtext()}
      />
    );
  }

  return <></>;
};

export default connectIagBrand()(PolicyStatusNotification);
