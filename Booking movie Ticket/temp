// trackingUtils.ts
import { ElementName, ElementType, ActionName, Interaction } from './types'
import { t } from '../../utils/i18nextUtil'

export const revealNumberEvent = () => {
    const revealNumber = {
        interaction: Interaction.CLICK,
        element: {
            name: ElementName.CALLUS,
            value: ActionName.SHOW_NUMBER,
            type: ElementType.LINK
        }
    }
    trackingEventContext?.dispatch(revealNumber)
}

export const clickedNumberEvent = () => {
    const clickedNumber = {
        interaction: Interaction.CLICK,
        element: {
            name: ElementName.CALLUS,
            value: t('constants.phoneNumberDisplay').replaceAll(' ', '-'),
            type: ElementType.LINK
        }
    }
    trackingEventContext?.dispatch(clickedNumber)
}
