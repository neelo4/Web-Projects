import { BrandDataProps, connectIagBrand } from '@iag-common/iag-brand-context';
import { Container } from '@iag/chroma-react-ui.container';
import { Logo } from '@iag/chroma-react-ui.logo';
import React, { useContext } from 'react';
import { AppContext } from '../../AppContext';
import onboardingHomeCheckImg from '../../assets/images/onboardingHomeCheckImg.svg';
import { DOOTB_ONBOARDING_TYPE } from '../../components/shared/Constants';

const OnboardingHeader: React.FC<BrandDataProps> = ({ tt }) => {
  const { appState } = useContext(AppContext);
  const onboardingType = appState?.onboardingAndEdocsResult?.onboardingType;

  return (
    <div>
      <div className="z-0 bg-primary">
        <Container className="flex flex-col pt-10 pb-5 px-4 sm:pb-10">
          <Logo variant="light" />
          <div className="flex flex-col justify-start mt-8">
            {appState?.firstName && (
              <h1
                data-testid="onboarding-module-page-greeting"
                className="text-white font-medium text-2xl sm:text-3xl mr-2"
              >
                {tt('pages.home.greeting') +
                  (appState?.preferredName == '' ? appState?.firstName : appState?.preferredName)}
              </h1>
            )}
            <h3
              data-testid="onboarding-module-page-greeting-message"
              className="text-white mb-0 mt-4 font-medium text-lg sm:text-xl"
            >
              {onboardingType === DOOTB_ONBOARDING_TYPE.GENERAL_ONBOARDING
                ? tt(`onboardingModule.generalOnboarding.greetingMessage`)
                : onboardingType === DOOTB_ONBOARDING_TYPE.MIGRATION_ONBOARDING
                ? tt(`onboardingModule.migrationOnboarding.greetingMessage`)
                : ''}
            </h3>
          </div>
        </Container>
      </div>
      <div className="z-10 -mt-56 hidden sm:block">
        <Container className="flex justify-end px-2 sm:px-4 md:px-4">
          <img className="w-[410px] h-[300px]" src={onboardingHomeCheckImg} alt="onboarding-image" />
        </Container>
      </div>
    </div>
  );
};

export default connectIagBrand()(OnboardingHeader);
